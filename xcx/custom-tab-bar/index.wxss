/* components/nav-tab/nav-tab.wxss */

.nav-box {
  height: 128rpx;
}

.ios {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.nav-tab {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  height: 128rpx;
  box-shadow: -3px 0 20px -2px rgba(0, 0, 0, 0.2);
  -webkit-box-shadow: -3px 0 20px -2px rgba(0, 0, 0, 0.2);
  -moz-box-shadow: -3px 0 20px -2px rgba(0, 0, 0, 0.2);
  z-index: 999999;
  display: -webkit-flex;
  display: flex;

  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
}

.nav-box.iPhoneX {
  height: 140rpx !important;
}
.nav-box.iPhoneX .nav-tab {
  height: 140rpx !important;
}

.nav-box.iPhoneX .item{
  height: 108rpx;
}

.item-box {
  position: relative;
  z-index: 1;
}

.item {
  font-size: 22rpx;
  color: #222222;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  position: relative;
  z-index: 1;
}

.item.active {
  color: #01c176;
}

.item .icon-box {
  height: 50rpx;
  position: relative;
  z-index: 1;
}

.item .text {
  position: relative;
  z-index: 1;
  margin-top: 6rpx;
}

.item .txt {
  display: inline-block;
  position: relative;
  z-index: 1;
}

.item .count {
  position: absolute;
  top: 0;
  left: 50%;
  background-color: #ff3333;
  color: #fff;
  /* padding: 0 2rpx; */
  line-height: 24rpx;
  min-width: 24rpx;
  border-radius: 24rpx;
  font-size: 20rpx;
  transform: translateX(40%) translateY(-30%);
  display: block;
  text-align: center;
}
.item .icon {
  display: inline-block;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 60rpx;
  height: 50rpx;
}
