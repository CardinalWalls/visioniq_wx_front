/* pages/News/Detail/Detail.wxss */

.detail-top {
  padding: 40rpx 20rpx 0 20rpx;
}

.title {
  font-weight: bold;
  font-size: 40rpx;
  color: #262626;
}

.dec {
  font-size: 24rpx;
  content: #424242;
  margin-top: 20rpx;
  border-bottom: 2rpx solid #e4e4e4;
  padding-bottom: 24rpx;
}

.dec .time {
  margin-right: 20rpx;
}

.dec .count {
  color: #8c8c8c;
}


.content {
  margin-top: 50rpx;
  padding: 0 20rpx 140rpx 20rpx;
  color: #424242;
  font-size: 30rpx;
  line-height: 1.8;
}



.nums-fixed {
  height: 140rpx;
  /* border-top: 1px solid #f5f5f5; */
}

.nums-fixed .nums {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 30;
  background-color: #fff;
  height: 140rpx;
  align-items: center;
  border-top: 1px solid #f5f5f5;
}


.nums .item {
  text-align: center;
  position: relative;
  z-index: 1;
  width: 100rpx;
}
.nums .button {
  position: absolute;
  width: 100% !important;
  height: 100%;
  z-index: 4;
  opacity: 0;
  top: 0;
  left: 0;
}

.nums .text {
  color: #262626;
  font-size: 28rpx;
  display: block;
  margin-top: 10rpx;
}



.common-pop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 100;
}
.common-pop .cover-view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 101;
  background-color: rgba(0, 0, 0, 0.9);
}

.common-pop .text {
  text-align: center;
  color: #d1d1d1;
  font-size: 30rpx;
  height: 60rpx;
  opacity: 1;
}

.common-img {
  width: 600rpx;
  z-index: 102;
  text-align: center;
}

.common-img .img {
  width: 100%;
}

.common-pop .close {
  position: absolute;
  bottom: -80rpx;
  left: 50%;
  transform: translateX(-50%);
  display: block;
  z-index: 103;
}


.iPhoneX .nums-fixed {
  height: 170rpx !important;
}

.iPhoneX .nums-fixed .nums {
  padding-bottom: 30rpx;
}