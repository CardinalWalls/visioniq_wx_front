/* pages/home/home.wxss */
page {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  -webkit-justify-content: center;
  justify-content: center;
  height: 100vh;
  background-color: #fff !important;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.login {
  position: absolute;
  width: 86%;
  left: 7%;
  top: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.login .logo-img {
  width: 208rpx;
  height: 198rpx;
  margin-bottom: 20rpx;
  margin-top: 10vh;
}

.login .text {
  font-size: 40rpx;
  color: #1e1e1e;
  text-align: center;
  font-weight: bold;
}

.text-box {
  line-height: 1.5;
}

.btn-box {
  width: 100%;
}

.btn-box .btn {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  background-color: #01c176;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
  color: #fff;
}

.btn-box .btn.black {
  background-color: #222220;
}

.btn-box .btn:last-child {
  margin-bottom: 0;
}

.agree {
  color: #333333;
  font-size: 30rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 140rpx;
}

.agree .green {
  color: #01c176;
}

.agreement-con {
  height: 46vh;
  overflow-y: scroll;
  margin: 20rpx 0;
}
