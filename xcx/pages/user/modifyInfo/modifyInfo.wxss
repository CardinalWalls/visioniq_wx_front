/* pages/users/personal/personal.wxss */
.modify-pd {
  padding: 20rpx 0;
  border-top: 20rpx solid #f9f9f9;
}

.title-box {
  display: flex;
  align-items: center;
  height: 86rpx;
  padding: 0 30rpx;
  color: #1a1a1a;
  font-size: 32rpx;
  font-weight: bold;
}

.modify-box {
  padding: 0 30rpx;
}

.user-img {
  width: 80rpx;
  height: 80rpx;
  background: #f5f5f8;
  border-radius: 50%;
}

.icon-modifyinfo-arrowr {
  margin-left: 24rpx;
}

.icon-modifyinfo-arrowr.disabled {
  opacity: 0;
}

.modify-item {
  min-height: 110rpx;
  border-bottom: 1px solid #f7f7f7;
  display: flex;
  align-items: center;
}

.modify-item.column {
  flex-direction: column;
  align-items: flex-start;
  padding: 32rpx 0;
}

.headimg-box {
  width: 90rpx;
  position: relative;
  z-index: 1;
}

.modify-item .avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
}

.modify-item .title {
  color: #262626;
  font-size: 32rpx;
  width: 200rpx;
}

.modify-item .text-box {
  display: flex;
  justify-content: flex-end;
}

.modify-item .text-box.pdr {
  padding-right: 40rpx;
}

.modify-item input {
  text-align: right;
  height: 100%;
  width: 100%;
  font-size: 34rpx;
  color: #666666;
  line-height: 60rpx;
  height: 60rpx;
}

.modify-item .icon-modifyInfo-arrow {
  margin-left: 20rpx;
}

.modify-item .icon-modifyInfo-arrow.disabled {
  opacity: 0;
}

.modify-item:last-child {
  border-bottom: none;
}

textarea {
  width: 100%;
  padding: 20rpx;
  font-size: 32rpx;
  color: #262626;
}

.input-placeholder {
  color: #999999;
  font-size: 32rpx;
}

.btn-box {
  background-color: #f9f9f9;
  padding: 46rpx 60rpx;
}

.imglist {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.imglist .imgbox {
  border-radius: 15rpx;
  background-color: #f5f5f5;
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 23rpx;
  margin-bottom: 10rpx;
  position: relative;
  z-index: 1;
  background-size: cover;
  background-repeat: no-repeat;
}

.imglist .imgbox .voices-loading {
  position: absolute;
  left: 0;
  bottom: 6rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #12c287;
  -webkit-animation: saleloading 2s linear infinite;
  animation: saleloading 2s linear infinite;
}

.imglist .imgbox.video {
  width: 100%;
  height: 300rpx;
  border-radius: 0;
  margin-right: 0;
}

.imglist .imgbox .progress {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 8rpx;
  background-color: #12c287;
  border-radius: 0 0 15rpx 15rpx;
}

.imglist .imgbox .icon-delete {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
}

.imglist .imgbox:nth-child(4n) {
  margin-right: 0;
}

.imglist .img {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
  position: relative;
  z-index: 1;
}
