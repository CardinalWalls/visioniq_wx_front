/* pages/addArchives/addArchives.wxss */
.form-list {
  padding: 40rpx 20rpx;
}

.form-list .item {
  margin-bottom: 40rpx;
}

.form-list .pick-line {
  display: flex;
  align-items: center;
}

.form-list .line {
  width: 33rpx;
  height: 3rpx;
  background-color: #e5e5e5;
  margin: 0 10rpx;
}

.form-list .item-lable {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.form-list .require {
  color: #f83b43;
  margin-right: 10rpx;
}

.form-list .require.opa0 {
  opacity: 0;
}

.form-list .name {
  color: #262626;
  font-size: 32rpx;
}

.form-list .green {
  color: #45b778;
  font-size: 26rpx;
}

.form-list .item-con {
  display: flex;
  align-items: center;
  background-color: #f6f6f6;
  height: 80rpx;
  align-items: center;
  border-radius: 80rpx;
}

.form-list .text-box {
  flex: 1;
  padding: 0 20rpx 0 30rpx;
}

.form-list .input-text {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #1a1a1a;
}

.form-list .input-text.tc {
  text-align: center;
}

.form-list .opacity {
  opacity: 0;
}

.form-list .icon-box {
  padding-right: 30rpx;
}

.protocol-box {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.protocol-box .link {
  color: #01c176;
}
