/* pages/doctor/archivesDetail/archivesDetail.wxss */
page {
  background-color: #f9f9f9;
}

.user-top {
  background: #2db275;
  background: -moz-linear-gradient(45deg, #2db275 0%, #32cb8f 94%);
  background: -webkit-linear-gradient(45deg, #2db275 0%, #32cb8f 94%);
  background: linear-gradient(45deg, #2db275 0%, #32cb8f 94%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#2db275', endColorstr='#32cb8f',GradientType=1 );
}

.top-box {
  margin: 20rpx 20rpx 0 20rpx;
  min-height: 235rpx;
  border: 1px solid #fff;
  border-bottom: none;
  border-radius: 25rpx 25rpx 0 0;
  display: flex;
  align-items: center;
  padding: 0 35rpx;
  background: #b9ead6;
  background: -moz-linear-gradient(top, #b9ead6 0%, #ffffff 98%);
  background: -webkit-linear-gradient(top, #b9ead6 0%, #ffffff 98%);
  background: linear-gradient(to bottom, #b9ead6 0%, #ffffff 98%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#b9ead6', endColorstr='#ffffff',GradientType=0 );
}

.top-box .img-box {
  margin-right: 20rpx;
}

.top-box .risk-level {
  margin-left: 20rpx;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid #e20202;
  padding: 0 20rpx;
  border-radius: 30rpx;
  color: #e20202;
  background-color: rgba(254, 250, 131, 0.52);
}

.top-box .risk-level.blue {
  border-color: #1fbefe;
  background-color: rgba(147, 210, 243, 0.33);
  color: #101010;
}

.top-box .remark {
  color: #e20202;
  font-size: 24rpx;
}

.top-box .text-box {
  flex: 1;
}

.top-box .name {
  color: #2a2a2a;
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.top-box .age {
  background-color: #4ed3a1;
  height: 58rpx;
  line-height: 58rpx;
  border-radius: 58rpx;
  font-size: 28rpx;
  color: #ffffff;
  padding: 8rpx 24rpx;
}

.top-box .idcard {
  color: #272727;
  font-size: 30rpx;
  font-family: 'fontNumBold';
}

.tel-box {
  display: flex;
  margin: 0 20rpx 20rpx 20rpx;
  align-items: center;
  background-color: #fff;
  border-radius: 0 0 25rpx 25rpx;
  border: 1px solid #fff;
  border-top: none;
  height: 76rpx;
  padding: 0 35rpx;
}

.tel-box .phone {
  color: #2db477;
  font-size: 34rpx;
  font-family: 'fontNumBold';
}

.tel-box .name {
  color: #2db477;
  font-size: 30rpx;
  font-weight: bold;
  font-style: italic;
  margin-left: 14rpx;
  position: relative;
  z-index: 1;
}

.tel-box .name::after {
  content: '';
  width: 113rpx;
  height: 9rpx;
  background-color: rgba(125, 231, 97, 0.4);
  display: block;
  position: absolute;
  bottom: 8rpx;
  left: 20rpx;
}

.title-box {
  display: flex;
  align-items: center;
  padding: 40rpx 20rpx 0 20rpx;
}

.title-box .name {
  position: relative;
  z-index: 1;
  color: #2a2a2a;
  font-size: 36rpx;
  font-weight: bold;
}

.title-box .name::after {
  content: '';
  width: 130rpx;
  height: 20rpx;
  position: absolute;
  bottom: 2rpx;
  left: 0;
  z-index: -1;
  background: #84faa7;
  background: -moz-linear-gradient(left, #84faa7 0%, #faffed 96%);
  background: -webkit-linear-gradient(left, #84faa7 0%, #faffed 96%);
  background: linear-gradient(to right, #84faa7 0%, #faffed 96%);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#84faa7', endColorstr='#faffed', GradientType=1);
}

.title-box .btn {
  border: 2rpx solid #01c176;
  background-color: #d9fff0;
  height: 56rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #22be80;
  font-size: 24rpx;
  padding: 0 20rpx;
  margin-left: 10rpx;
  position: relative;
  z-index: 1;
}

.title-box .btn icon {
  margin-right: 6rpx;
}

.title-box .dec {
  font-size: 24rpx;
  color: #bbbbbb;
}

.box {
  background-color: #fff;
  border-radius: 25rpx;
  margin: 20rpx 20rpx 0 20rpx;
}

.btn-box-log {
  display: flex;
  height: 80rpx;
  position: relative;
  z-index: 1;
}

.btn-box-log::after {
  content: '';
  width: 20rpx;
  height: 80rpx;
  background-color: #ffffff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: skewX(-14deg) translateY(-50%) translateX(-100%);
}

.btn-box-log .item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #01c176;
  color: #fff;
  font-size: 30rpx;
}

.btn-box-log .item:first-child {
  border-radius: 80rpx 0 0 80rpx;
}

.btn-box-log .item:last-child {
  border-radius: 0 80rpx 80rpx 0rpx;
}

.btn-box-log .item icon {
  margin-right: 10rpx;
}

.btn-box-log .item.orange {
  background-color: #fb881f;
}

.vision-swiper {
  padding-bottom: 20rpx;
}

.vision-swiper-loading {
  height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #22be80;
}

.vision-swiper-loading .sk-fading-circle .sk-circle:before {
  content: '';
  display: block;
  margin: 0 auto;
  width: 15%;
  height: 15%;
  background-color: #22be80;
  border-radius: 100%;
  -webkit-animation: sk-circleFadeDelay 1.2s infinite ease-in-out both;
  animation: sk-circleFadeDelay 1.2s infinite ease-in-out both;
}

.vision-swiper-loading .loading-box {
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 145px;
  height: 145px;
  margin: 0 auto 0 auto;
}

.vision-swiper-loading .loading-box .text {
  color: #22be80;
  font-size: 32rpx;
}

.menu-list {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.menu-list .item {
  width: 32%;
  background-color: #22be80;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 32rpx;
  margin-right: 2%;
  margin-bottom: 20rpx;
  box-shadow: rgba(0, 0, 0, 0.4) 0px 2px 6px 0px;
  font-weight: bold;
  position: relative;
  z-index: 1;
}

.menu-list .item:nth-child(3n) {
  margin-right: 0;
}

.menu-list .dec {
  font-size: 24rpx;
}

.menu-list .count {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  font-size: 26rpx;
  font-weight: normal;
}
