/* components/report/report.wxss */
.nodate-dec {
  color: #adadad;
  font-size: 28rpx;
}

.report-box {
  position: relative;
  z-index: 1;
}

.report-box .full-btn {
  padding: 0 20rpx;
  opacity: 0.4;
  position: absolute;
  top: -6px;
  right: 0rpx;
  z-index: 10;
}

.report-box:nth-child(2) {
  border-top: 1px solid #eee;
  padding-top: 30rpx;
  margin-top: 30rpx;
}

.report-box:nth-child(2) .full-btn {
  top: 20rpx;
}

.report-box .img {
  width: 100%;
  height: 533rpx;
  display: block;
}

.tips {
  position: relative;
  z-index: 1;
  margin: 0rpx 35rpx 0 35rpx;
  background-color: #fff8f8;
  color: #f37678;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0rpx;
  border-radius: 10rpx;
}

.tips::after {
  content: '';
  top: -8px;
  left: 40rpx;
  position: absolute;
  width: 0;
  height: 0;
  border-left: 7px solid transparent;
  border-right: 7px solid transparent;
  border-bottom: 8px solid #fff8f8;
}

.tips icon {
  margin-right: 10rpx;
}

.tips.orange {
  background-color: #fef1d5;
  color: #fac858;
}

.tips.orange::after {
  content: '';
  border-bottom: 8px solid #fef1d5;
}

.tips.zan {
  background-color: #effbf7;
  color: #15c295;
}

.tips.zan::after {
  content: '';
  border-bottom: 8px solid #effbf7;
}

.report-content {
  padding: 0 20rpx;
  margin-top: 30rpx;
}

.percentage {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #110011;
}

.percentage .name {
  margin-right: 20rpx;
}

.percentage .text-box {
  flex: 1;
  margin: 0 10rpx;
}

.percentage .line {
  height: 14px;
  background: linear-gradient(to right, #f9fdfa 0%, #7ec581 100%);
  border: 1px solid rgba(187, 187, 187, 0.6);
}

.report-content-dec {
  margin-top: 40rpx;
  font-size: 24rpx;
  border: 4rpx dashed #f69b18;
  border-radius: 16rpx;
  padding: 16rpx;
  color: #fb881f;
}

.report-content-dec.s0 {
  color: #15c295;
  border-color: #15c295;
}

.report-content-dec.s4 {
  color: #ff0000;
  border-color: #ff0000;
}

.full-screen {
  position: fixed;
  top: 0;
  z-index: 999999991111;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}

.full-screen .full-con {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
}

.full-screen .close {
  position: absolute;
  top: -50rpx;
  right: 0;
  padding: 60rpx 20rpx;
  z-index: 11;
}
